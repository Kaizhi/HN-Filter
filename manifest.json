{
  "name": "HN Filter",
  "description": "Filter out unwanted HN",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "HN Filter",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]

  },

  "manifest_version": 2
}
